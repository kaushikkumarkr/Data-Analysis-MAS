# DataVault Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# LLM Backend Configuration
# =============================================================================

# Backend selection: auto, mlx, or ollama
# - auto: Uses MLX on Apple Silicon, falls back to Ollama
# - mlx: Force MLX (requires Apple Silicon)
# - ollama: Force Ollama (requires ollama serve running)
LLM_BACKEND=auto

# MLX model (Apple Silicon only)
MLX_MODEL=mlx-community/Llama-3.2-3B-Instruct-4bit

# Ollama configuration
OLLAMA_MODEL=llama3.2
OLLAMA_BASE_URL=http://localhost:11434

# =============================================================================
# Langfuse Observability (Optional)
# =============================================================================

# Get keys from http://localhost:3000 (self-hosted) or https://cloud.langfuse.com
LANGFUSE_PUBLIC_KEY=pk-lf-your-public-key
LANGFUSE_SECRET_KEY=sk-lf-your-secret-key
LANGFUSE_HOST=http://localhost:3000

# =============================================================================
# PostgreSQL Configuration (for pgvector semantic memory)
# =============================================================================

POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=datavault
POSTGRES_USER=datavault
POSTGRES_PASSWORD=datavault

# =============================================================================
# Logging
# =============================================================================

LOG_LEVEL=INFO
LOG_FORMAT=json
